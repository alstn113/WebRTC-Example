{
  "name": "webrtc",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/neko113/WebRTC-app.git",
  "author": "neko113 <alstn113@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"yarn workspace client dev\" \"yarn workspace server start:dev\"",
    "dev:client": "yarn workspace client dev",
    "dev:server": "yarn workspace server start:dev",
    "build:client": "yarn workspace client build",
    "build:server": "yarn workspace server build",
    "format:client": "yarn workspace client format",
    "format:server": "yarn workspace server format",
    "lint:client": "yarn workspace client lint",
    "lint:server": "yarn workspace server lint",
    "storybook": "yarn workspace client storybook",
    "prepare": "husky install"
  },
  "lint-staged": {
    "client/**/*/*.{ts,tsx}": [
      "yarn format:client",
      "yarn lint:client"
    ],
    "server/**/*/*.ts": [
      "yarn format:server",
      "yarn lint:server"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/jest": "28.1.8",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.2",
    "jest": "28.1.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.3.2",
    "typescript": "^4.6.4"
  }
}
